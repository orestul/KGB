
<div class="container">
    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">
                    <strong>My Art</strong>
                </h2>
                <hr>
                @using (Html.BeginForm("UploadArt", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <!-- Error text <p class="text-danger">@@</p>-->
                    <input type="file" name="file" id="file" class="hidden" />
                    <button type="button" class="btn btn-default display-inline" onclick="document.getElementById('file').click();">Upload Art</button>
                    <input type="submit" name="Submit" id="Submit" value="Upload" class="display-inline" />
                }
                <br />
                <br />
                @for (int i = 0; i < 3; i++)
                {
                    <div class="col-lg-4 text-center">
                        <img class="img-responsive" src="http://placehold.it/750x450" alt="">
                        <h3>
                            This is Art
                            <small>Job Title</small>
                        </h3>
                    </div>
                }
            </div>
        </div>
    </div>
</div>