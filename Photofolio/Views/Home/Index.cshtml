                <h2 class="brand-before">
                    <small>Welcome to</small>
                </h2>
                <h1 class="brand-name">Photo Folio</h1>
                <hr class="tagline-divider">
                <h2>
                    <small>By
                        <strong>Start Bootstrap</strong>
                    </small>
                </h2>-->
            </div>
        </div>
    </div>

    <div class="row" id="topMembers">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">
                    <strong>Top Members of the week</strong>
                </h2>

                <hr>
                @foreach(var item in ViewData["TopMembers"] as List<Login.Models.AspNetUser>)
                {
                    <div class="col-md-6">
                        <div class="well well-lg">
                            <div class="row">
                                <div class="col-sm-3">
                                    <img src="http://placehold.it/75x75" class="img-responsive">
                                </div>
                                <div class="col-sm-9">
                                    <h4 class="margin-removed">@item.UserName</h4>
                                    <div class="star-div">
                                        @if (Math.Round((float)item.AvgRating) == 3)
                                        {
                                            <div class="static-rating-front">
                                                <span><input type="radio" id="str1"><label for="str1"></label></span>
                                                <span><input type="radio" id="str2"><label for="str2"></label></span>
                                                <span class="checked"><input type="radio" id="str3"><label for="str3"></label></span>
                                                <span class="checked"><input type="radio" id="str4"><label for="str4"></label></span>
                                                <span class="checked"><input type="radio" id="str5"><label for="str5"></label></span>
                                            </div>
                                        }
                                        else if (Math.Round((float)item.AvgRating) == 4)
                                        {
                                            <div class="static-rating-front">
                                                <span><input type="radio" id="str1"><label for="str1"></label></span>
                                                <span class="checked"><input type="radio" id="str2"><label for="str2"></label></span>
                                                <span class="checked"><input type="radio" id="str3"><label for="str3"></label></span>
                                                <span class="checked"><input type="radio" id="str4"><label for="str4"></label></span>
                                                <span class="checked"><input type="radio" id="str5"><label for="str5"></label></span>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="static-rating-front">
                                                <span class="checked"><input type="radio" id="str1"><label for="str1"></label></span>
                                                <span class="checked"><input type="radio" id="str2"><label for="str2"></label></span>
                                                <span class="checked"><input type="radio" id="str3"><label for="str3"></label></span>
                                                <span class="checked"><input type="radio" id="str4"><label for="str4"></label></span>
                                                <span class="checked"><input type="radio" id="str5"><label for="str5"></label></span>
                                            </div>
                                        }
                                    </div>
                                    <br>
                                    @item.Country
                                    <br>
                                    @item.TagOne | @item.TagTwo | @item.TagThree
                                    <br>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
